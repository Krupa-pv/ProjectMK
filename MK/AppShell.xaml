<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="MK.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:MK"
    Title="MK">

    <TabBar>
        <Tab Title="Home" Icon="home_2.png">
            <ShellContent Route="MainPage" ContentTemplate="{DataTemplate local:MainPage}" />
        </Tab>
        
        <Tab Title ="Learn" Icon ="brain.png">
            <ShellContent Route="LearnPage" ContentTemplate="{DataTemplate local:LearnPage}" />
        </Tab>

        <Tab Title = "Practice" Icon ="practice.png">
            <ShellContent Route="PracticePage" ContentTemplate ="{DataTemplate local:PracticePage}"/>
        </Tab>

        <Tab Title="More" Icon="settings_icon.png">
            <ShellContent Route="UserInput" ContentTemplate="{DataTemplate local:UserInput}" />
        </Tab>
    </TabBar>
</Shell>
