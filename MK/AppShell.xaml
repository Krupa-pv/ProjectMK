<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="MK.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:MK"
    Title="MK">

    <TabBar>
        <Tab Title="Home" Icon="home_2.png">
            <ShellContent Route="MainPage" ContentTemplate="{DataTemplate local:MainPage}" />
        </Tab>
        
        <Tab Title="Speak" Icon="speak_icon.png">
            <ShellContent Route="ISpeak" ContentTemplate="{DataTemplate local:ISpeak}" />
        </Tab> 

        <Tab Title="More" Icon="more_icon.png">
            <ShellContent Route="UserInput" ContentTemplate="{DataTemplate local:UserInput}" />
        </Tab>

        <Tab Title="Test" Icon="more_icon.png">
            <ShellContent Route="TestVision" ContentTemplate="{DataTemplate local:TestVision}" />
        </Tab>
    </TabBar>
</Shell>
